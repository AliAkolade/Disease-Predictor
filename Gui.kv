<MyLabel@Label>:
    size_hint_x: 0.4
<MyInput@TextInput>:
<MyBox@BoxLayout>:
    orientation: 'horizontal'
    size_hint: (1, None)
    height: 40

<WindowManager>:
    SplashScreen:
        name: 'Splash'
    SelectScreen:
        name: 'Select'
    PredictScreen:
        name: 'Predict'
    SingleScreen:
        name: 'Single'

<SplashScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            Image:
                id: pic
                source: 'Resources\\Bowen.png'
            Label:
                text: 'Disease Predictor'

<SelectScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: 0.5, 0.5
            spacing: 10
            orientation: 'vertical'
            Button:
                text: 'Detect Most Likely Disease'
                on_release: root.all_page()
            Button:
                text: 'Predict Individual Diseases'

<PredictScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        padding: 10, 5
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            Label:
                text: 'Please Enter Medical Details'
                size_hint_y: 0.1
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    height: self.minimum_height
                    size_hint_y: None
                    spacing: 10
                    MyBox:
                        MyLabel:
                            text: 'Age'
                        MyInput:
                            id: input_age
                            hint_text:'Enter Age'
                            text: '50'
                    MyBox:
                        MyLabel:
                            text: 'Gender'
                        MyInput:
                            id: input_gen
                            text: '1'
                    MyBox:
                        MyLabel:
                            text: 'Number of Pregnancies'
