<WindowManager>:
    SplashScreen:
        name: 'Splash'
    SelectScreen:
        name: 'Select'
    PredictScreen:
        name: 'Predict'

<SplashScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            Image:
                id: pic
                source: 'Resources\\Bowen.png'
            Label:
                text: 'Disease Predictor'


<SelectScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            size_hint: 0.5, 0.5
            spacing: 10
            orientation: 'vertical'
            Button:
                text: 'Detect Most Likely Disease'
                on_release: root.all_page()
            Button:
                text: 'Predict Individual Diseases'